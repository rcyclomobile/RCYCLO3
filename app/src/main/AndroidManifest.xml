<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.rcyclo3" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo5"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TopLevelActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EstablishmentLoginActivity"
            android:label="@string/title_activity_establishment_login" >
        </activity>
        <activity
            android:name=".EstablishmentMainActivity"
            android:label="@string/title_activity_establishment_main" >
        </activity>
        <activity
            android:name=".EstablishmentRegisterActivity"
            android:label="@string/title_activity_establishment_register" >
        </activity>
        <activity
            android:name=".CompanyLoginActivity"
            android:label="@string/title_activity_company_login" >
        </activity>
        <activity
            android:name=".CompanyRegisterActivity"
            android:label="@string/title_activity_company_register" >
        </activity>
        <activity
            android:name=".CompanyMainActivity"
            android:label="@string/title_activity_company_main" >
        </activity>
        <activity
            android:name=".SelectWasteActivity"
            android:label="@string/title_activity_select_waste" >
        </activity>
        <activity
            android:name=".SelectCoordinatesActivity"
            android:label="@string/title_activity_select_coordinates" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".FormConteinerRequestActivity"
            android:label="@string/title_activity_form_conteiner_request" >
        </activity>
        <activity
            android:name=".SelectEstablishmentActivity"
            android:label="@string/title_activity_select_establishment" >
        </activity>
        <activity
            android:name=".ContainerRequestsActivity"
            android:label="@string/title_activity_container_requests" >
        </activity>
        <activity
            android:name=".ActivarContainerActivity"
            android:label="@string/title_activity_activar_container" >
        </activity>
        <activity
            android:name=".CompanyContainersActivity"
            android:label="@string/title_activity_company_containers"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".CompanyModifyContainerActivity" >
        </activity>
    </application>

</manifest>
