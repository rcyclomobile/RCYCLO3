<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="2"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textColor="#47a61e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="18dp"
        android:text="FORMULARIO DE REGISTRO EMPRESAS"
        android:textStyle="italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Nombre de Empresa" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="Nombre"
        android:textColorHint="#d8e4af"
        android:textColor="#47a61e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Correo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="empresa@gmail.com"
        android:textColorHint="#d8e4af"
        android:textColor="#47a61e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Contrase침a" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textColorHint="#d8e4af"
        android:textColor="#47a61e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Fono" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="Fono"
        android:inputType="number"
        android:textColorHint="#d8e4af"
        android:textColor="#47a61e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="Direcci칩n" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="Direcci칩n"
        android:textColorHint="#d8e4af"
        android:textColor="#47a61e"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"/>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_row="12"
        android:theme="@android:style/Theme.Light"
        android:background="@drawable/states_solid_color_shape"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="#d8e4af"
        android:text="Registrarme"
        android:onClick="sendForm"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:layout_row="13"
        android:layout_columnSpan="3"
        android:layout_column="1"
        android:src="@drawable/logo5" />

    </GridLayout>

</ScrollView>
