<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="4"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#47a61e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="30dp"
            android:layout_columnSpan="3"
            android:text="Detalle del contenedor"
            android:textStyle="italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Nombre de Contenedor"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/nombre_contenedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Nombre de contenedor"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Tipo de Desecho"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/tipo_desecho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Tipo de Desecho"
            android:textSize="28dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Fundacion encargada:"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/fundacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:focusable="false"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nombre"
            android:textColorHint="#47a61e" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Estado Actual:"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="ESTADO"
            android:textColorHint="#47a61e" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nuevo Estado:"
            />

        <RadioGroup
            android:layout_row="10"
            android:layout_column="1"
            android:id="@+id/waste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:textColor="#47a61e"
                android:id="@+id/vacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VacÃ­o"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_row="11"
                android:textSize="18dp"
                android:layout_columnSpan="3"
                android:layout_column="1" />

            <RadioButton
                android:textColor="#47a61e"
                android:id="@+id/mitad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A la mitad"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="18dp"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:layout_row="12"
                />


            <RadioButton
                android:textColor="#47a61e"
                android:id="@+id/lleno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LLeno!!"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="18dp"
                android:layout_row="14"
                android:layout_columnSpan="3"
                android:layout_column="1" />

        </RadioGroup>


        <Button
            android:textColor="#d8e4af"
            android:id="@+id/actualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_row="15"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Listo!!"
            android:onClick="actualizar"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_row="16"
            android:layout_columnSpan="3"
            android:layout_column="1"
            android:src="@drawable/logo5"
            />



    </GridLayout>

</ScrollView>