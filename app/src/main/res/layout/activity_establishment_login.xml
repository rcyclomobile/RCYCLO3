<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="2"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#47a61e"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="R-CYCLO FUNDACIONES"
            android:textSize="25dp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_marginTop="25dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/logo5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Correo"
            />

        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:hint="fundacion@gmail.com"
            android:textColorHint="#d8e4af"
            android:textColor="#47a61e"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:text="sanJose@gmail.com"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contraseña"
            />

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:hint="Contraseña"
            android:textColorHint="#d8e4af"
            android:textColor="#47a61e"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:text="admin"
            />

        <Button
            android:textColor="#d8e4af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_row="6"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="ENTRAR"
            android:onClick="enter"
            />

        <Button
            android:textColor="#d8e4af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="REGISTRARSE"
            android:onClick="register"
            />

    </GridLayout>

</ScrollView>
