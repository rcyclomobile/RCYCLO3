<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="4"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">



<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:src="@drawable/logo5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="R-CYCLO"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="70sp"
        android:textColor="#d8e4af" />

    <Button
        android:theme="@android:style/Theme.Light"
        android:background="@drawable/states_solid_color_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="25dp"
        android:text="Soy una Empresa!"
        android:layout_gravity="left|bottom"
        android:textColor="#d8e4af"
        android:onClick="companyRegister"/>

    <Button
        android:theme="@android:style/Theme.Light"
        android:layout_width="match_parent"
        android:background="@drawable/states_solid_color_shape"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:id="@+id/button"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="20dp"
        android:textColor="#d8e4af"
        android:text="Soy una Fundacion!"
        android:onClick="establishmentRegister"
        />


</GridLayout>
</ScrollView>