<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="2"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:textColor="#47a61e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="R-CYCLO EMPRESAS"
        android:textSize="25dp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_marginTop="35dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:src="@drawable/logo5" />

    <TextView
        android:textColor="#47a61e"
        android:id="@+id/helloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text=""
        />

    <Button
        android:textColor="#d8e4af"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_row="3"
        android:theme="@android:style/Theme.Light"
        android:background="@drawable/states_solid_color_shape"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Solicitar un nuevo Contenedor"
        android:onClick="request"
        />

        <Button
            android:textColor="#d8e4af"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_row="4"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="Revisar mis Contenedores"
            android:onClick="myContainers"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:layout_gravity="end"
            android:layout_row="5"
            android:layout_column="1"
            android:textColor="#d8e4af"
            android:text="Logout"
            android:onClick="logout"
            />

    </GridLayout>

</ScrollView>
