<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:rowCount="12"
    android:columnCount="4"
    android:background="@drawable/solid_color_shape"
    tools:context="com.hfad.carlostest.formularioActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="30dp"
            android:layout_columnSpan="3"
            android:textColor="#47a61e"
            android:text="Detalle del contenedor"
            android:textStyle="italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:text="Nombre de Contenedor"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/nombre_contenedor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nombre de contenedor"
            android:textColorHint="#47a61e" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nombre empresa:"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:focusable="false"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Nombre"
            android:textColorHint="#47a61e" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Coordenadas:"
            />

        <TextView
            android:textColor="#47a61e"
            android:id="@+id/coordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_row="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:focusable="false"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:hint="Coordenadas"
            android:textColorHint="#47a61e" />




        <Button
            android:textColor="#d8e4af"
            android:id="@+id/confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_row="13"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:theme="@android:style/Theme.Light"
            android:background="@drawable/states_solid_color_shape"
            android:onClick="confirmar"
            android:text="Activar Contenedor"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_row="14"
            android:layout_columnSpan="3"
            android:layout_column="1"
            android:src="@drawable/logo5"
            />

    </GridLayout>

</ScrollView>